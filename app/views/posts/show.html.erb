<h1><%= @post.title%></h1>
<h4>Usuario: <%= @post.author%></h4>

<p><%= @post.body%></p>

<ul>
    <li> <%= link_to 'Back to home', root_path%> </li>
    <li> <%= link_to "Edit", edit_post_path(@post)%> </li>
    <li> <%= 
        link_to "Destroy",
        post_path(@post),
        method: :delete,
        data: {confirm: "Are you sure?"}
    %> </li>
</ul>