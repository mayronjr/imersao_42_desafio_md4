<%= form_with model: post do |form|%>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
        <% post.errors.full_messages_for(:title).each do |message| %>
            <div><%= message%></div>
        <%end%>
    </div>
    <div>
        <%= form.label :author %>
        <%= form.text_field :author %>
        <% post.errors.full_messages_for(:author).each do |message| %>
            <div><%= message%></div>
        <%end%>
    </div>
    <div>
        <%= form.label :body %>
        <%= form.text_area :body %>
        <% post.errors.full_messages_for(:body).each do |message| %>
            <div><%= message%></div>
        <%end%>
    </div>
    <div>
        <%= form.submit %>
    </div>
<% end %>